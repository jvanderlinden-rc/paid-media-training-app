generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  LEARNER
  ADMIN
}

enum ModuleStatus {
  DRAFT
  PUBLISHED
}

enum AttemptKind {
  MODULE_TEST
  SECTION_EXAM
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(LEARNER)
  attempts  Attempt[]
  progress  Progress[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Section {
  id          String    @id @default(cuid())
  level       String
  title       String
  description String
  order       Int
  modules     Module[]
  questions   Question[]
  attempts    Attempt[]
  progress    Progress[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Module {
  id           String         @id @default(cuid())
  section      Section        @relation(fields: [sectionId], references: [id])
  sectionId    String
  title        String
  description  String
  order        Int
  passingScore Int            @default(80)
  status       ModuleStatus   @default(DRAFT)
  blocks       ContentBlock[]
  exercises    Exercise[]
  questions    Question[]
  progress     Progress[]
  attempts     Attempt[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model ContentBlock {
  id        String   @id @default(cuid())
  module    Module   @relation(fields: [moduleId], references: [id])
  moduleId  String
  type      String
  data      Json
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id        String   @id @default(cuid())
  module    Module   @relation(fields: [moduleId], references: [id])
  moduleId  String
  kind      String
  prompt    String
  data      Json
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id         String   @id @default(cuid())
  module     Module?  @relation(fields: [moduleId], references: [id])
  moduleId   String?
  section    Section? @relation(fields: [sectionId], references: [id])
  sectionId  String?
  kind       String
  prompt     String
  data       Json
  points     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  answers    Answer[]
}

model Attempt {
  id        String       @id @default(cuid())
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  module    Module?      @relation(fields: [moduleId], references: [id])
  moduleId  String?
  section   Section?     @relation(fields: [sectionId], references: [id])
  sectionId String?
  kind      AttemptKind
  score     Int
  maxScore  Int
  passed    Boolean
  answers   Answer[]
  createdAt DateTime     @default(now())
}

model Answer {
  id        String   @id @default(cuid())
  attempt   Attempt  @relation(fields: [attemptId], references: [id])
  attemptId String
  question  Question @relation(fields: [questionId], references: [id])
  questionId String
  response  Json
  correct   Boolean
  score     Int
  createdAt DateTime @default(now())
}

model Progress {
  id           String         @id @default(cuid())
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  module       Module?        @relation(fields: [moduleId], references: [id])
  moduleId     String?
  section      Section?       @relation(fields: [sectionId], references: [id])
  sectionId    String?
  status       ProgressStatus @default(NOT_STARTED)
  highestScore Int            @default(0)
  updatedAt    DateTime       @updatedAt

  @@unique([userId, moduleId])
  @@unique([userId, sectionId])
}
